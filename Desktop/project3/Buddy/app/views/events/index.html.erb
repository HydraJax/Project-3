<%= paginate @events %>

<%= link_to("New Event", new_event_path) %>

<%= link_to("My Events", my_events_path) %>

<% if current_user %>
  <% @events.each do |event| %>
      <%= render partial: 'event', locals: {event:event} %>
        <br>
        <% if current_user && event.event_users.where(user_id:current_user.id).first %>

            <%=link_to("map", event_path(event))%>

            <h3>You have joined this group</h3>
            
        <% else %>

              <%= form_for event.event_users.new do |f| %>
              <%= f.hidden_field :event_id, value: event.id %>
              <%= f.submit "JOIN GROUP" %>
              <% end %>

        <% end %>
          
          <%= link_to("New Event", new_event_path) %>
          <%= link_to("My Events", my_events_path) %>
  <% end %>      
<% else %> 
      <h3>Please Sign in to Join an Event</h3>

      <% @events.each do |event| %>
      Workout: <%=event.event_name %>
      Description: <%=event.description %><br>
      Date: <%=event.date %>
      Time: <%=event.time %>
      Dificulty: <%=event.difficulty %>
      <% end %>
<% end %>









