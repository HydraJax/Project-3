<%= paginate @events %>

<%= link_to("New Event", new_event_path) %>

<%= link_to("My Events", my_events_path) %>

<% @events.each do |event| %>
  <%= render partial: 'event', locals: {event:event} %>
  
  <% unless event.event_users.where(user_id:current_user.id).first %>

    <%= form_for event.event_users.new do |f| %>
      <%= f.hidden_field :event_id, value: event.id %>
      <%= f.submit "JOIN GROUP" %>
    <% end %>
  
  <% end %>
<br>
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{event.latitude}%2C#{event.longitude}" %>

<% end %>


