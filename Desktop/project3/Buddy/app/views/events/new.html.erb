<%= form_for (@event) do |f| %>
  <%= f.label :Event %>
  <%= f.text_field :event_name %><br>
  <%= f.label :Description %>
  <%= f.text_area :description %><br>
  <%= f.label :Address %>
  <%= f.text_field :address %><br>
  <%= f.label :time %>
  <%= f.text_field :time %><br>
  <%= f.label :Date %>
  <%= f.text_field :date %><br>
  <%= f.label :Difficulty %>
  <%= f.text_field :difficulty %><br>

<%= f.submit %>
<% end %>